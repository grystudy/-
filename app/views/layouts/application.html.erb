<!DOCTYPE html>
<html>
  <head>
    <title>Oilprice</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :head %>
  </head>

  <body>
    <nav class="main-menu">
    <ul>    
      <li>
        <a href=<%=records_path%>>
          <i class="icon-table nav-icon"></i>
          <span class="nav-text">
          变更履历
          </span>
        </a>
      </li>   
      <li>
        <a href=<%=regions_path%>>
          <i class="fa fa-cogs"></i>
          <span class="nav-text">
          全国
          </span>
        </a>
      </li>   
    </ul>
    <ul>   
      <%= yield :nav %>
    </ul>
    <ul class="logout">
      <li>
      <a href=<%=push_diff_records_path%>>
      <i class="icon-off nav-icon"></i>
      <span class="nav-text">
      发布差分数据
      </span>
      </a>
      </li>
      <li>
      <a href=<%=push_all_records_path%> onClick="return confirm('确定?');">
      <i class="fa fa-cogs"></i>
      <span class="nav-text">
      发布全部数据
      </span>
      </a>
      </li>
      <li>
      <a href=<%=stash_records_path%> onClick="return confirm('确定?');">
      <i class="fa fa-cogs"></i>
      <span class="nav-text">
      创建版本(不发布数据)
      </span>
      </a>
      </li>
    </ul>
  </nav>
  <section class="wrapper scrollable">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if current_user %>
      <%= link_to(current_user.name + '  注销', destroy_user_session_path, :method => :delete,class:"label label-info") %> |
      <%= link_to('修改密码', edit_registration_path(:user),class:"label label-info") %>
    <% else %>
      <%= link_to('注册', new_registration_path(:user),class:"label label-info") %> |
      <%= link_to('登录', new_session_path(:user),class:"label label-info") %>
    <% end %>      
    <%= yield %>  
  </section>
  </body>
</html>
